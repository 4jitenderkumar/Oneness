<div class="modal fade" id="popUp" role="dialog" style="z-index:9999">
<div class="modal-dialog">
 <div class="modal-content">
   <div class="modal-header">
     <button type="button" class="close" data-dismiss="modal">&times;</button>
     <h4 class="modal-title">Send Message</h4>
   </div>
   <div class="modal-body">
   <!------------------------------------------------------------------------------------>
   <div class="form-horizontal"> <!-- form -->
     <div class="form-group">
       <div class="col-sm-10">
         <h3 id="send-to"></h3>
       </div>
     </div>
     <div class="form-group">
       <div class="col-sm-12"><!--Body-->
         <textarea type="text" class="form-control" name="message" id="message" required></textarea>
       </div>
     </div>
     <div class="form-group">
       <div class="col-sm-offset-2 col-sm-10">
         <button class="btn btn-default" type="submit" id="MessageSendButton" style="float:right">Send</button>
       </div>
     </div>
   </div> <!-- form -->
   <!---------------------------------------------------------------------------------->
   </div>
 </div>
</div>
</div>

<div class="profile-pic-center-main-div mobile" style="margin-bottom:80px">
<img src="/Upload/Profile/1537584524591.jpeg" class="profile-pic-center allSides" />
</div>
<div class='content-div'>
   <div class="container">
       <div class="card allSidesSoft" style="background:rgb(249, 249, 249)">
         <div class="card-body">

       
           <div class="d-flex pc">
               <div class="image-container">
                   <img src="/Upload/Profile/1537584524591.jpeg" id="user-profile-image" style="width: 150px; height: 150px" class="img-thumbnail allSidesSoft" />
               </div>
           </div>
       

         
           
             <!-- <div class="form-group">
               <a class="btn btn-warning pull-right" id="messagePopBtn">Message</a>
             </div> -->
           
           <br />
           <br />

       
           <div class="col-sm-6">
             <div class="panel panel-default allSidesSoft panel-main-div">
               <div class="panel-heading">Name</div>
               <div class="panel-body"><%= data.name %></div>
             </div>
           </div>
       

       
           <div class="col-sm-6">
             <div class="panel panel-default allSidesSoft panel-main-div">
               <div class="panel-heading">Gender</div>
               <div class="panel-body" style="text-transform: capitalize;"><%= data.gender %></div>
             </div>
           </div>
       

       
           <div class="col-sm-6">
             <div class="panel panel-default allSidesSoft panel-main-div">
               <div class="panel-heading">D.O.B</div>
               <div class="panel-body null-link" id="dobtext"><%= data.dob %></div>
             </div>
           </div>
       

       
           <div class="col-sm-6">
             <div class="panel panel-default allSidesSoft panel-main-div">
               <div class="panel-heading">City</div>
               <div class="panel-body null-link" id="dobtext"><%= data.city %></div>
             </div>
           </div>
       

       

       

       

     
 </div>

 </div>
