<% layout('layout') %>

<% include ../partials/navbar %>

<div id="wrapper">
<!-- Sidebar -->
<% include ../partials/sidebar2 %>
<div id="page-content-wrapper" style="padding:0;margin-top:60px"> <!--Margin Top is new-->
    <div class="container-fluid page-content-div" style="padding:0">
       <div class="row">
          <div class="col-lg-12 scoll-possible" style="padding:0">




<style>
body{
color: #575757 !important;
}
.content-div{
margin-top:2%;
width: 100%;
}
.null-link{
color: black
}
.null-link:hover{
color:black;
text-decoration: none;
}
.panel-main-div:hover{
box-shadow:0 3px 10px 0 rgba(115,143,147,.2);
}
@media(max-width: 768px){
.content-div{
margin-top:5%;
width: 100% !important;
}
}
</style>

<div class="profile-pic-center-main-div mobile" style="margin-bottom:80px">
<img src="/Upload/Profile/<%= user.image %>" class="profile-pic-center allSides" />
</div>

<div class='content-div'>
   <div class="container">
       <div class="card allSidesSoft" style="background:rgb(249, 249, 249)">
         <div class="card-body">

         
           <div class="d-flex pc">
               <div class="image-container">
                   <img src="/Upload/Profile/<%= user.image %>" id="user-profile-image" style="width: 150px; height: 150px" class="img-thumbnail allSidesSoft" />
               </div>
           </div>
         

             <div class="form-group">
               <a href="/detail" class="btn btn-primary pull-right" style="margin-right:15px">Edit</a>
             </div>

           <br />
           <br />
       
           <div class="col-sm-6">
             <div class="panel panel-default allSidesSoft panel-main-div">
               <div class="panel-heading">Email</div>
               <div class="panel-body"><%= user.email %></div>
             </div>
           </div>
       

       
           <div class="col-sm-6">
             <div class="panel panel-default allSidesSoft panel-main-div">
               <div class="panel-heading">Gender</div>
               <div class="panel-body" style="text-transform: capitalize;"><%= user.gender %></div>
             </div>
           </div>
       

       
           <div class="col-sm-6">
             <div class="panel panel-default allSidesSoft panel-main-div">
               <div class="panel-heading">Name</div>
               <div class="panel-body"><%= user.name %></div>
             </div>
           </div>
       

       
           <div class="col-sm-6">
             <div class="panel panel-default allSidesSoft panel-main-div">
               <div class="panel-heading">City</div>
               <div class="panel-body"><%= user.city %></div>
             </div>
           </div>
       

       
           <div class="col-sm-6">
             <div class="panel panel-default allSidesSoft panel-main-div">
               <div class="panel-heading">D.O.B</div>
               <div class="panel-body null-link" id="dobtext"><%= user.dob %></div>
             </div>
           </div>
       

       
           <div class="col-sm-6">
             <div class="panel panel-default allSidesSoft panel-main-div">
               <div class="panel-heading">Phone</div>
               <div class="panel-body"><%= user.phone %></div>
             </div>
           </div>
       

       
         
           <div class="col-sm-12">
             <div class="panel panel-default allSidesSoft panel-main-div">
               <div class="panel-heading">Interests</div>
               <div class="panel-body">
               
                 <span class="tag-still" style="border:1px solid rgb(136, 154, 250);text-transform: capitalize">Programming</span>
               
                 <span class="tag-still" style="border:1px solid rgb(136, 154, 250);text-transform: capitalize">devlopment</span>
               
                 <span class="tag-still" style="border:1px solid rgb(136, 154, 250);text-transform: capitalize">travelling</span>
               
                 <span class="tag-still" style="border:1px solid rgb(136, 154, 250);text-transform: capitalize">games</span>
               
                 <span class="tag-still" style="border:1px solid rgb(136, 154, 250);text-transform: capitalize">reading</span>
               
               </div>
             </div>
           </div>
         
       

       
         
           <div class="col-sm-12">
             <div class="panel panel-default allSidesSoft panel-main-div">
               <div class="panel-heading">About journey</div>
               <div class="panel-body">
                <%= user.journey %>
               </div>
             </div>
           </div>
         
       

       
         
           <div class="col-sm-12">
             <div class="panel panel-default allSidesSoft panel-main-div">
               <div class="panel-heading">Expectations from communities</div>
               <div class="panel-body">
                <%= user.expectation %>
               </div>
             </div>
           </div>
         
       

   </div>
 </div>
</div>
</div>
<br />

</div>
</div>
</div>
</div>